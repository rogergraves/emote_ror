<div id="content-win-create" role="main">
  <div class="resend_conf">
    <h2>Resend confirmation instructions</h2>

    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div> 

       <div class="show_alert">
        <%= errors_for(resource) %><%= flash_messages %>
       </div>

      <div class="resend_conf_btn">
        <%= image_submit_tag("confirm_btn.png") %>
      </div>

      
     <% end %>
  </div>

</div>