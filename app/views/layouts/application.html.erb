<!DOCTYPE html>
<html>
<head>
  <title>E.Mote</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

<style type="text/css">
body
{ 
background-image:url('/images/background.png');
background-repeat:repeat-x;
background-attachment:fixed;
background-position:50% 50%; 
}
</style>
</head>
<body>
<!-- header starts here -->	
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<% if user_signed_in? %>
	Logged in as: <%= current_user.email %> | <%= link_to 'Subscriptions', account_subscriptions_path %> | <%= link_to 'Emotes', account_surveys_path %> | <%= link_to 'Logout', destroy_user_session_path %>
<% else %>
	<%= link_to 'Login', new_user_session_path %> | <%= link_to 'Register', new_user_registration_path %>
<% end %>
<!-- page starts here -->
<%= yield %>
<!-- page starts here -->

<!-- footer starts here -->	
</body>
</html>
