<!DOCTYPE html>

<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ --> 
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en" class="no-js"> <!--<![endif]-->
<head>
  <meta charset="utf-8"/>

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame 
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>

  <title><%= @title || 'My e.motes' %></title>
  <meta name="description" content=""/>
  <meta name="author" content=""/>


  <link rel="Shortcut Icon" href="/favicon.ico"/>
  <link href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'/>

  <!-- CSS : implied media="all" -->
  <%= stylesheet_link_tag 'style.css?v=2', :media => :all %>
  <%= content_for :head_css %>
  <%= csrf_meta_tag %>

  <!-- All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects -->
  <%= javascript_include_tag 'modernizr-1.6.min.js' %>
  <%= content_for :head_js %>
  <script type="text/javascript">
  	var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-21120503-1']);
	  _gaq.push(['_setDomainName', 'none']);
	  _gaq.push(['_setAllowLinker', true]);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();
  </script>
</head>

<body>

  <div id="container">

    <div id="before-header">&nbsp;</div>

        <div id="header">
	    <img id="logo" src="/images/emote_logo.png"/>
              <% if user_signed_in? %>
	    	<div id="menu">
                  <div id="username">Welcome, <%= current_user.full_name.blank? ? current_user.email : current_user.full_name %>!</div>
                  <div id="buttons">

                  <div class="dropdown">
                    <% this_active = (controller.controller_name == 'surveys' && controller.action_name == 'index') %>
                    <%# link_to raw("<div class=\"button #{(controller.controller_name == 'surveys' && controller.action_name == 'index') ? 'on' : 'off'}\" id=\"emoteControlButton\" style=\"z-index: 10;position: relative;\"></div>"), root_path %>
                    <%= link_to raw(content_tag(:div, '', :id => 'emoteControlButton', :style => 'z-index: 10; position: relative;', :class => "button #{this_active ? 'on' : 'off'}")), root_path %>
                    <% if this_active %>
                      <div class="arrow"><img src="/images/buttons/econtrol_arrow.png"/></div>
                    <% end %>
                  </div>

                  <% unless current_user.surveys.empty? %>
                    <div class="dropdown">
                    <% this_active = (controller.controller_name == 'surveys' && controller.action_name == 'scorecard') %>
                    <a href="#">
                      <div class="button <%= this_active ? 'on' : 'off' %>" id="scoreCardButton" style="z-index: 10;position: relative;"></div>
                    </a>
                    <ul class="menu-body">
                      <% current_user.surveys.each do |survey| %>
                        <li <%= 'class="active"' if params[:id] == survey.id.to_s -%>>
                          <%= link_to truncate(survey.project_name, :length => 20), scorecard_account_survey_path(survey), :title => survey.project_name %>
                        </li>
                      <% end %>
                    </ul>
                    <% if this_active %>
                      <div class="arrow"><img src="/images/buttons/econtrol_arrow.png"/></div>
                    <% end %>
                    </div>
                  <% end %>

                  <div class="dropdown">
                    <% this_active = %w(accounts subscriptions).include?(controller.controller_name) %>
                    <a href="#">
                      <div class="button <%= this_active ? 'on' : 'off' %>" id="myAccount" style="z-index: 10;position: relative;"></div>
                    </a>
                    <ul class="menu-body">
                      <li>
                        <%= link_to 'Change information', edit_account_path %>
                      </li>
                      <li>
                        <%= link_to 'Account activity', account_subscriptions_path %>
                      </li>
                      <li>
                        <%= link_to 'Subscribe', new_account_subscription_path %>
                      </li>
                      <li>
                        <%= link_to 'Logout', destroy_user_session_path %>
                      </li>
                    </ul>
                    <% if this_active %>
                      <div class="arrow"><img src="/images/buttons/econtrol_arrow.png"/></div>
                    <% end %>
                  </div>

                  </div>
                </div>
              <% end %>
	</div>

      <%= yield %>

    <div id="forfooter"> &nbsp; </div>
  </div>

  <div id="footer">
      <%= link_to image_tag('ie_logo.png', :id => 'ie-logo'), 'http://www.inspirationengine.com/', :target => '_blank' %>
  </div>

  <!-- Javascript at the bottom for fast page loading -->

  <!-- Grab Google CDN's jQuery. fall back to local if necessary -->
  <%= javascript_include_tag :defaults  %>
  <%= content_for :footer_js %>

  <!--[if lt IE 7 ]>
    <%= javascript_include_tag 'dd_belatedpng.js'  %>
    <script>DD_belatedPNG.fix('img, .png_bg'); // Fix any <img> or .png_bg bg-images. Also, please read goo.gl/mZiyb </script>
  <![endif]-->
  <script language="javascript" type="text/javascript">
/*
    if ( ! Modernizr.borderradius || ! Modernizr.boxshadow) {
	var myBorder = RUZEE.ShadedBorder.create({ corner:10, shadow:20 });
	myBorder.render('header');
    }
*/
  </script>
</body>
</html>