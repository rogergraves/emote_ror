	Logged in as: <%= current_user.email %> | <%= link_to 'Logout', destroy_user_session_path %>
<% else %>
	<%= link_to 'Login', new_user_session_path %> | <%= link_to 'Register', new_user_registration_path %>
<% end %>
<!-- page starts here -->
<%= yield %>
<!-- page starts here -->

