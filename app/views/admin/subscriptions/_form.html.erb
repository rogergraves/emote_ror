<%= f.label :kind, 'Plan type:' %>
<%= f.select :kind, options_for_select(Subscription::PLAN_KINDS.map{|pk| [pk.humanize, pk]}, f.object.kind) %><br/>
<%= f.label :emote_amount, 'Number of emotes' %>
<%= f.number_field :emote_amount %><br/>
<%= f.label :start_date, 'Start date' %>
<%= f.text_field :start_date, :class => 'date-picker' %><br/>
<%= f.label :end_date, 'End date' %>
<%= f.text_field :end_date, :class => 'date-picker' %><br/>
<%= errors_for(subscription) %>
<script>
	$(function() {
          $(".date-picker").datepicker({
                dateFormat: "yy-mm-dd",
                showOn: "button",
                buttonImage: "/images/calendar.gif",
                buttonImageOnly: true
          });
        });
</script>