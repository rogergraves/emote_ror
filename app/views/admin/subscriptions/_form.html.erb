<%= f.label :emote_amount, 'Number of emotes' %>
<%= f.number_field :emote_amount %><br/>
<%= f.label :start_date, 'Start date' %>
<%= f.text_field :start_date, :class => 'date-picker' %><br/>
<%= f.label :end_date, 'End date' %>
<%= f.text_field :end_date, :class => 'date-picker' %><br/>
<%= f.label :description, 'Description' %>
<%= f.text_field :description %><br/>
<%= f.label :total_paid, 'Paid' %> <%= f.select :currency, ['USD','EUR','GBP'] %><%= f.text_field :total_paid %><br/>
<%= f.label :token, 'Transaction # (Token)' %>
<%= f.text_field :token %><br/>
<%= errors_for(subscription) %>
<script>
	$(function() {
          $(".date-picker").datepicker({
                dateFormat: "yy-mm-dd",
                showOn: "button",
                buttonImage: "/images/calendar.gif",
                buttonImageOnly: true
          });
        });
</script>