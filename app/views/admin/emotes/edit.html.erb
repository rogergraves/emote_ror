<h4>Edit e.mote</h4>
<% form_for @emote, :as => :emote, :url => admin_emote_path(@emote), :html => { :method => :put } do |f| %>
        <%= f.label :created_at %>
        <%= f.text_field :created_at, :readonly => true %>
        <br/>
        <%= render :partial => 'form', :locals => { :f => f, :users => @users, :emote => @emote } %>
	<%= submit_tag 'Save' %> or <%= link_to 'Cancel', admin_emotes_path %>
<% end%>
<br/>
<br/>
<%= button_to 'Delete this emote', admin_emote_path(@emote), :method => :delete, :confirm => "This will destroy the emote and all associated data. Operation is irreversible.\nAre you sure you want to delete emote '#{@emote.project_name}?'" %>