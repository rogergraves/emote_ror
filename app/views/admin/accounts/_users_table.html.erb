<style>
.sortableTable {
  border: 1px solid #999;
	background-position: center;
	background-repeat:no-repeat;	
}

.sortableTable td {
	font-size: .95em;
	padding: 3px 6px;
	color: #101010;
	border-bottom: 1px solid #999;
}

.sortableTable tr.tableHeaderRow td {
	color: #830519;	
        background: #c7e1f0;
	border-top: 1px solid #830519;
	border-bottom: 1px solid #830519;
	font-weight: bold;
}

.sortableTable tr.tableHeaderRow td.sortup {
	background-color: #faf1ed;
        background-image:url(/images/arrow_down.gif);
	background-position: top right;
	background-repeat:no-repeat;
	
}

.sortableTable tr.tableHeaderRow td.sortdown {
	background-color: #faf1ed;
        background-image:url(/images/arrow_up.gif);
	background-position: top right;
	background-repeat:no-repeat;
}

#search {
  padding: 10px;
}
</style>

<% if search %>
  <div id='search'>
  <%= form_tag({:action => @action}, {:method => 'get', :id => 'search_form'}) do %>
    <%=text_field_tag("q", params['q'], :size => 10 ) %> 
    <%= submit_tag 'Search'%> (by email, name, title, company)
  <% end %>
  </div>
<% end %>

<table width="95%" class='sortableTable' cellpadding="0" cellspacing="0">
  <thead>
    <%= table_header %>
  </thead>
  <tbody>
	<% if @objects.size == 0 %>
  	  <tr><td colspan='<%= @headings.size %>'>No items in the list</td></tr>
	<% else %>
	 <% @objects.each do |object| %>
	    <tr id='<%=dom_id(object)%>' class='<%= cycle('odd', 'even') %>'>
         <% @headings.each do |heading| %>
             <td>
               <%=
                  case heading[2]
                  when :edit then link_to(object.email, edit_admin_account_path(object))
                  else object.instance_eval(heading[1])
                  end
               %>
             </td>
         <% end %>
  		</tr>
	<%  end
	 end %>
	</tbody>
</table>
