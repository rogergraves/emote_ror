<div id="content-win-centr" role="main">
  <div id="forgetpw-content">
  <span class="big-text">Enter your email address</span>
  <br/><br/>
  You will be emailed a link to reset you password.

    <div class="forgetpw-form">
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
        <div>
          <%= f.text_field :email, :class =>'field_forgetpw', :required => true %>
          <%= image_submit_tag("reset_button.png"%>
        </div>
      <% end %>
      <%= devise_error_messages! %>
    </div>

    <span class="cs_link"><a href="mailto:support@inspirationengine.com">Click here to email our customer support.</a></span>
  </div>
</div>