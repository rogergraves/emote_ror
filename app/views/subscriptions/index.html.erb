<div id="content-win-centr" role="main">
  <div id="viewactivity-content">
   <span class="big-text">Current Subscriptions</span>
      <div class="total_cards">
        <%= pluralize(current_user.scorecards_total, 'Total ScoreCard') %>
      </div>
      
      <div class="clearstring"></div>

      <div class="currentsubs"><% @subscriptions.each do |subscription| %>
          <%= pluralize(subscription.emote_amount, 'ScoreCard') %> until <%= subscription.end_date.strftime('%d %B %Y') %><br />
    <% end %>
      </div>
   
      <div class="add_scorecards_button">
      <%= link_to image_submit_tag("add_scorecards_button.png"), new_account_subscription_path %>
      </div>

      <div class="payment_history">
      <span class="big-text">Payment History</span>
        <div class="payment_history_data">
          <table class="table_data">
            <tr class="table_head">
              <th>Date</th>
              <th>Product</th>
              <th>Paid</th>
              <th>Transaction #</th>
            </tr>
            <% @payments.each do |payment| %>
            <tr class="table_cell">
              <td><%= payment.created_at.strftime('%d-%b-%y') %></td>
              <% if payment.trial? %>
             
              <td>1 Pack</td>
              <td>0.00</td>
              <td class="table_cell_right">FREE TRIAL</td>

              <% else %>

              <td><%= payment.transaction.description %></td>
              <td><%= number_to_currency(payment.transaction.total, :unit => Country.curr_code_to_symbol(payment.transaction.currency)) %></td>
              <td class="table_cell_right"><%= payment.transaction.token %></td>
              <% end %>
            </tr>
            <% end %>
          </table>
        </div>
    </div>
  </div>
  <span class="change_info"><a href="#">Change Information on My Account</a></span>
</div>