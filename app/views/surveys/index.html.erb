<% content_for :footer_js, javascript_include_tag('jquery-ui-1.8.9.custom.min.js', 'emote_control.js') %>
<% content_for :head_css, stylesheet_link_tag('jquery-ui-1.8.9.custom.css') %>

<div id="content-win-control" role="main">
<div id="area">
  <!-- <%= flash_messages %> -->
  <table>
    <caption>e.mote Control</caption>
    <thead>
      <tr>
        <th class="project-name"><a class="tooltip" href="#">e.mote&trade; NAME<span class="classic">Click on e.mote&trade; name to see Scorecard.</span></a></th>
        <th><a class="tooltip" href="#">CODE<span class="classic">Enter this code at http://emotethis.com to take the e.mote&trade;</span></a></th>
        <th><a class="tooltip" href="#">START DATE<span class="classic">Date the e.mote&trade; was created.</span></a></th>
        <th><a class="tooltip" href="#">ARCHIVE<span class="classic">Prevent new e.motes from being submitted. The message "e.mote no longer active" will be shown.</span></a></th>
        <th><a class="tooltip tooltipleft" href="#">GET e.mote&trade; LINK<span class="classic">Get a link to copy/paste into emails, websites, IM, Facebook, Twitter, etc. </span></a></th>
        <th><a class="tooltip tooltipleft" href="#">DELETE<span class="classic">Purge an e.mote&trade; and its data. This will free up a slot so you can create a new e.mote&trade;.</span></a></th>
      </tr>
    </thead>
    <% @surveys.each do |survey| %>
      <tr class="<%= cycle('odd','even') %>">
        <td class="project-name first-col">
          <%= link_to survey.project_name, scorecard_account_survey_path(survey), :target => 'scorecard'%>
        </td>
        <td>
          <% if survey.active %>
            <%= survey.code %>
          <% end %>
        </td>
        <td valign="middle">
          <%= survey.created_at.strftime('%d %b %Y') %>
        </td>
        <td>
          <%= form_for("survey_#{survey.id}_archive", :url => account_survey_path(survey), :html => {:method => :put, :id => "survey_#{survey.id}_archive_form"}) do |f| %>
            <%= hidden_field_tag 'property', 'archive' %>
            <%= check_box_tag "survey_#{survey.id}_archive", true, !survey.active, :onchange => "$('#survey_#{survey.id}_archive_form').submit();" %>
          <% end %>
        </td>
        <td>
          <% if survey.active %>
            <%= link_to image_tag('emote_link_enabled.png', :alt => 'Go to e.moteâ„¢'), '#', :onclick => "showLinks('#{survey.emote_direct_link}');", :title => 'Go to e.mote'%>
          <% end %>
        </td>
        <td class="last-col">
          <%= link_to image_tag('trash_icon.png'), account_survey_path(survey), :method => :delete, :confirm => 'Are you sure? This will permanently delete this e.mote and all collected data.' %>
        </td>
      </tr>
    <% end %>
  </table>

  <div id="create-emote">
    <% if current_user.can_add_scorecard? %>
        <%= link_to image_tag('create-emote_button.png'), new_account_survey_path %>
        <div id="add-scorecard">
            You can add up to <%= pluralize(current_user.scorecards_available, 'more Scorecard') %> with your current subscriptions. <%= link_to 'Click here', new_account_subscription_path %> to add more to your account.
        </div>
    <% else %>
        <div id="scorecard-limit">
            You don't have free slots for new e.mote&trade;. Delete one or buy more credits <%= link_to 'here', new_account_subscription_path %>
        </div>
    <% end %>
  </div>
</div>
</div>

<div id="links-dialog" style="visibility: hidden;">
  <p>Paste link in <strong>email</strong> or <strong>IM</strong>:</p>
  <%= text_field_tag 'scorecard_direct_link', 'scorecard_direct_link', :readonly => true, :size => 60 %>
  <br/>
  <br/>
  <p>Paste this HTML to embed in website:</p>
  <%= text_field_tag 'scorecard_embed_link', 'scorecard_embed_link', :readonly => true, :size => 60 %>
  <span class="open_emote"><%= link_to image_tag('open_emote_button.png', :alt => 'Open e.mote'), '#', :id => 'open-emote-link', :target => 'emotepreview' %></span>
</div>
