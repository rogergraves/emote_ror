<div id="content-win-centr" role="main">
<div id="getting-account">
    <span class="big-text">Getting Started</span>
    <br/>
    <span class="medium-text">Please tell us a little about yourself.</span>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:id => 'getting-account-form'}) do |f| %>
        <div class="field">
          <%= f.label :full_name, 'Name:' %>
          <%= f.text_field :full_name %>
        </div>

        <div class="field">
          <%= f.label :company, 'Organization Name:' %>
          <%= f.text_field :company %>
        </div>

        <div class="field">
          <%= f.label :job_title, 'Job Title:' %>
          <%= f.text_field :job_title %>
        </div>

        <div class="field">
          <%= f.label :email, 'Email Address:' %>
          <%= f.text_field :email %>*
        </div>

        <div class="field">
          <%= f.label :country_code, 'Country:' %>
          <%= f.select :country_code, options_for_select( Country::LIST.collect {|c| [c[:name], c[:iso]]}, session[:geo_location].country_code) %>
        </div>

        <div class="field">
          <%= f.label :phone_number, 'Phone:' %>
          <%= f.telephone_field :phone_number %>
        </div>

        <p class="create_acc">
          <%=  image_submit_tag("create_acc_button.png") %> <%= link_to 'Cancel', root_path %>
        </p>
        <p align="center">* A valid working email address is required</p>

      <% end %>

<%= devise_error_messages! %><%= flash_alert %>

</div>
</div>