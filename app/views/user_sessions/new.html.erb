<div id="content-win-login" role="main">
<div id="login-content">
  <div id="login-form">

      <div class="welcomebox">
        <p>Welcome to e.mote&reg;</p>
      </div>

    <%= flash_messages %>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, 'Email Address:' %>
        <%= f.email_field :email, :required => true %>
      </div>
      <div class="field">
        <%= f.label :password, 'Password:' %>
        <%= f.password_field :password, :required => true %>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="field-checkbox">
        <%= f.check_box :remember_me %> <%= f.label :remember_me, 'Remember me' %>
      </div>
      <% end -%>

      <div id="submit-area">
          <%= image_submit_tag("login_button.png") %> 
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      </div>
    <% end %>

  </div>

  

  <div id="create-account">
    <%= link_to image_tag('smile_create_acc.png'), new_registration_path(resource_name), :title =>'Create an account' %>

    <div id="no-account">
      <p>Don't have an account?</p>
      <p class="noproblem">No problem.</p>
    </div>

    <div class="clear"></div>
    
    <div id="create-one">
      <%= link_to 'Create one', new_registration_path(resource_name), :class => 'big-text' %>
    </div>
  </div>
</div>
</div>